<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="TitleView" parent="android:Widget.TextView">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/psr</item>
        <item name="android:padding">10sp</item>
        <item name="android:textSize">@dimen/title_label_font_size</item>
    </style>
    <style name="SubtitleView" parent="android:Widget.TextView">
        <item name="android:textColor">#666</item>
        <item name="android:padding">10sp</item>
        <item name="android:fontFamily">@font/psr</item>
        <item name="android:textSize">@dimen/subtitle_label_font_size</item>
    </style>
    <style name="SubtitleViewBlack" parent="android:Widget.TextView">
        <item name="android:textColor">#000</item>
        <item name="android:padding">10sp</item>
        <item name="android:fontFamily">@font/psr</item>
        <item name="android:textSize">@dimen/subtitle_label_font_size</item>
    </style>
    <style name="people_spinner_style">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:dropDownWidth">200dp</item>
        <item name="android:showDividers">none</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:fontFamily">@font/psr</item>
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:dropDownSelector">@android:color/black</item>
    </style>
    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:fontFamily">@font/psr</item>
    </style>
    <style name="SubtitleViewNoPadding" parent="android:Widget.TextView">
        <item name="android:textColor">#666</item>
        <item name="android:fontFamily">@font/psr</item>
        <item name="android:textSize">@dimen/subtitle_label_font_size</item>
    </style>
    <style name="SubtitleViewBlackNoPadding" parent="android:Widget.TextView">
        <item name="android:textColor">#000</item>
        <item name="android:fontFamily">@font/psr</item>
        <item name="android:textSize">@dimen/subtitle_label_font_size</item>
    </style>
</resources>
